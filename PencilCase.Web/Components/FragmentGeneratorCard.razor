@using PencilCase.Web.Models

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@FragmentGenerator.Name</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">@FragmentGenerator.Description</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton>Generate</MudButton>
    </MudCardActions>
</MudCard>

@code{
    [Parameter] public Models.FragmentGenerator FragmentGenerator { get; set; } = new();
}