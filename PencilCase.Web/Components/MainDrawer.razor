<MudPaper Style="overflow:hidden;">
    <MudDrawerContainer Class="mud-height-full">
        <MudDrawer @bind-Open="@Open"
                ClipMode="DrawerClipMode.Always"
                Elevation="3" 
                Variant="@DrawerVariant.Mini" 
                OpenMiniOnHover="true">
            <MudNavMenu>
                <MudNavLink Href="/studyguide" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.LibraryBooks">Study Guides</MudNavLink>
                <MudNavLink Href="/timer" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Timer">Pomodoro Tracker</MudNavLink>
                <MudNavLink Href="/flashcard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.FormatListBulleted">Flashcards</MudNavLink>
            </MudNavMenu>
        </MudDrawer>
    </MudDrawerContainer>
</MudPaper>

@code{
    [Parameter]
    public bool Open { get; set; }
}