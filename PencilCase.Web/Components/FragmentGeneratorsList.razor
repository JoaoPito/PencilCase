@using PencilCase.Web.Components
@using PencilCase.Web.Services
@using PencilCase.Web.Models
@inject FragmentApi FragmentApi;

<MudStack>
    @foreach(var fragment in fragments){
        <FragmentGeneratorCard FragmentGenerator=@fragment />
    }
</MudStack>

@code{
    public List<Models.FragmentGenerator>? fragments;

    protected override async Task OnInitializedAsync(){
        fragments = await FragmentApi.GetAllGenerators();
    }
}