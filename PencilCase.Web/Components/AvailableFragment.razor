@using PencilCase.Web.Models

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Fragment.Name</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">@Fragment.Description</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton>Generate</MudButton>
    </MudCardActions>
</MudCard>

@code{
    [Parameter]
    public FragmentEndpoint Fragment {get; set;}
}