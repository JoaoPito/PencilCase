<MudIconButton Icon="@Icons.Material.Rounded.Autorenew" aria-label="regenerate" OnClick="OnRegenerateClick" Disabled="@_disabled" />
<MudIconButton Icon="@Icons.Material.Rounded.Delete" aria-label="delete" OnClick="OnDeleteClick" Disabled="@_disabled" />

@code {
    [Parameter] public String Name { get; set; } = String.Empty;
    [Parameter] public Func<String, Task>? OnRegenerate { get; set; } 
    [Parameter] public Func<String, Task>? OnDelete { get; set; } 

    private bool _disabled = false;

    private async Task OnRegenerateClick(){
        if(OnRegenerate != null){
            _disabled = true;
            await OnRegenerate(Name);
            _disabled = false;
        }
        this.StateHasChanged();
    }

    private async Task OnDeleteClick(){
        if(OnDelete != null){
            _disabled = true;
            await OnDelete(Name);
            _disabled = false;
        }
    }
}