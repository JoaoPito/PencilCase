<MudIconButton Icon="@Icons.Material.Rounded.Delete" aria-label="delete" 
    OnClick="OnDeleteClick" Disabled="@Disabled" />
<MudIconButton Icon="@Icons.Material.Rounded.Autorenew" aria-label="share"
    OnClick="OnRenewClick" Disabled="@Disabled" />

@code{
    [Parameter] public Func<Task>? OnRenew { get; set; } 
    [Parameter] public Func<Task>? OnDelete { get; set; } 

    [Parameter] public bool Disabled { get; set; } = false;

    private async Task OnRenewClick(){
        if(OnRenew != null){
            Disabled = true;
            await OnRenew();
            Disabled = false;
        }
        this.StateHasChanged();
    }

    private async Task OnDeleteClick(){
        if(OnDelete != null){
            Disabled = true;
            await OnDelete();
            Disabled = false;
        }
    }
}