<MudIconButton Icon="@Icons.Material.Rounded.Clear" aria-label="delete" 
    OnClick="OnDeleteClick"/>
<MudIconButton Icon="@Icons.Material.Rounded.Autorenew" aria-label="share"
    OnClick="OnRenewClick" />

@code{
    [Parameter] public Func<Task>? OnRenew { get; set; } 
    [Parameter] public Func<Task>? OnDelete { get; set; } 

    private bool _disabled = false;

    private async Task OnRenewClick(){
        if(OnRenew != null){
            _disabled = true;
            await OnRenew();
            _disabled = false;
        }
        this.StateHasChanged();
    }

    private async Task OnDeleteClick(){
        if(OnDelete != null){
            _disabled = true;
            await OnDelete();
            _disabled = false;
        }
    }
}