@inherits LayoutComponentBase

<MudThemeProvider  @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" Theme="_customTheme" />
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Color="Color.Surface" Elevation="2">
        <MudLink Href="/" Color="Color.Inherit" Typo="Typo.h5">pencilcase</MudLink>
        <MudSpacer/>
        <MudButton Color="Color.Inherit" Variant="Variant.Text" Href="/studyguide" class="px-4">Study Guide</MudButton>
        <MudButton Color="Color.Inherit" Variant="Variant.Text" Href="/flashcard" class="px-4">Flashcards</MudButton>
        <MudButton Color="Color.Inherit" Variant="Variant.Text" Href="/dashboard" class="px-4">Dashboard</MudButton>
        <MudSpacer/>    
        <MudToggleIconButton 
            Icon="@Icons.Material.Rounded.DarkMode"
            ToggledIcon="@Icons.Material.Filled.WbSunny"
            Color="Color.Inherit" 
            @bind-Toggled="@_isDarkMode"></MudToggleIconButton>
    </MudAppBar>
    <MudMainContent class="mt-16 pa-4">
            @Body
    </MudMainContent>
</MudLayout>

@code {
    private MudThemeProvider? _mudThemeProvider;
    private bool _drawerOpen = false;
    private bool _isDarkMode = false;

    private readonly MudTheme _customTheme = new()
    {
        LayoutProperties = new LayoutProperties()
        {
            DefaultBorderRadius = "14px",
        }
    };

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    } 

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && _mudThemeProvider != null)
        {
            _isDarkMode = await _mudThemeProvider.GetSystemPreference();
            StateHasChanged();
        }
    }
}